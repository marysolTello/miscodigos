    private void pointActionPerformed(java.awt.event.ActionEvent evt) {                                      
      if(punto==true){ 
        if(cadenaNumeros.equals("")){ 
            cadenaNumeros="0."; 
        }else{ 
            cadenaNumeros+="."; 
        } 
        numeros.setText(cadenaNumeros); 
        punto=false; 
    } 
    }                                     

    private void resultadoActionPerformed(java.awt.event.ActionEvent evt) {                                          
     if (operacion.equals("nula")){ 
        resultados.setText(cadenaNumeros); 
    } 
    else if (operacion.equals("sumar")){ 
        segundoNumero = Double.parseDouble(cadenaNumeros); 
        result=primerNumero + segundoNumero; 
        numeros.setText(String.format("% .2f",result)); 
        cadenaNumeros=String.valueOf(result); 
        operacion="nula"; 
    } 
    else if (operacion.equals("restar")){ 
        segundoNumero = Double.parseDouble(cadenaNumeros); 
        result=primerNumero - segundoNumero; 
        numeros.setText(String.format("% .2f",result)); 
        cadenaNumeros=String.valueOf(result); 
        operacion="nula"; 
    } 
    else if (operacion.equals("multiplicar")){ 
        segundoNumero = Double.parseDouble(cadenaNumeros); 
        result=primerNumero * segundoNumero; 
        numeros.setText(String.format("% .2f",result)); 
        cadenaNumeros=String.valueOf(result); 
        operacion="nula"; 
    } 
    else if (operacion.equals("dividir")){ 
        segundoNumero = Double.parseDouble(cadenaNumeros); 
        if(segundoNumero==0){ 
            numeros.setText("Math Error"); 
        }else{ 
        result=primerNumero / segundoNumero; 
        numeros.setText(String.format("% .2f",result)); 
        cadenaNumeros=String.valueOf(result); 
        operacion="nula"; 
        } 
    } 
    resultados.setText(""); 
    activado=true; 
    punto=false;
    }                                         

    private void numerosKeyTyped(java.awt.event.KeyEvent evt) {                                 
      if(!Character.isDigit(evt.getKeyChar())&& evt.getKeyChar() != '.'){ 
        evt.consume(); 
    } 
    if (evt.getKeyChar() == '.' && numeros.getText().contains(".")){ 
        evt.consume(); 
    } 
    }                                

