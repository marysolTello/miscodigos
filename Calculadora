    private void CActionPerformed(java.awt.event.ActionEvent evt) {                                  
    resultados.setText(" "); 
    numeros.setText("0"); 
    operacion="nula"; 
    cadenaNumeros=" "; 
    activado=true; 
    punto=true; 
    }                                 

    private void raizActionPerformed(java.awt.event.ActionEvent evt) {                                     
    primerNumero=Double.parseDouble(cadenaNumeros); 
     resultados.setText("√("+ cadenaNumeros+")"); 
     result=Math.sqrt(primerNumero); 
     numeros.setText(String.format("%.2f", result)); 
     cadenaNumeros=String.valueOf(result); 
     punto=true; 
    }                                    

    private void divisionActionPerformed(java.awt.event.ActionEvent evt) {                                         
    if (activado==true){ 
        primerNumero=Double.parseDouble(cadenaNumeros); 
        resultados.setText(cadenaNumeros + "/"); 
        cadenaNumeros=" "; 
        operacion="dividir"; 
        activado=false; 
        punto=true; 
    } 
    }                                        

    private void CEActionPerformed(java.awt.event.ActionEvent evt) {                                   
     int tam=cadenaNumeros.length(); 
    if(tam>0){ 
        if(tam==1){ 
            cadenaNumeros="0"; 
        }else{ 
            cadenaNumeros=cadenaNumeros.substring(0,cadenaNumeros.length()-1);   
        } 
        numeros.setText(cadenaNumeros); 
    } 
    }                                  

    private void button7ActionPerformed(java.awt.event.ActionEvent evt) {                                        
    if (numeros.getText().equals("0")){ 
        //Se evalua si el número que se muestra en pantalla es igual a 0, o si tiene algún otro número 
        //Esto es para que, en el caso de que haya un 0, este se borre 
        cadenaNumeros="7"; 
    }else { 
        //Pero si hay algún otro número, el agregado se concatena con el que ya estaba escrito 
        cadenaNumeros+="7"; 
    } 
    numeros.setText(cadenaNumeros); //esto muestra la cadena formada 
    activado = true; //esto es para que yo pueda seguin usando la calculadora 
    }                                       

